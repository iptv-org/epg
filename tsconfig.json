{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2022",
    "esModuleInterop": true,
    "declaration": true,
    "typeRoots": [
      "./node_modules/@types",
      "./scripts/types"
    ],
    "allowJs": true,
    "outDir": "./dist"
  },
  "include": ["scripts/**/*", "src/**/*"],
  "exclude": ["node_modules", "dist"]
}